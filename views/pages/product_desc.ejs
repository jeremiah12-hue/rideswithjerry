    <section class="wide_shop_description">
        <div class="wide_shop_description_item_wrapper">
            <div class="wide_shop_description_img_wrapper">
                <img src="({% IMG_FRONT %})" alt="Ride Front View Image">
                <img src="({% IMG_REAR %})" alt="Ride Rear View Image">
                <img src="({% IMG_SIDE %})" alt="Ride Side View Image">
                <img src="({% IMG_SIDE2 %})" alt="Ride Side View Image">
                <img src="({% IMG_INTERIOR %})" alt="Ride Interior View Image">
                <img src="({% IMG_DASHBOARD %})" alt="Ride Dashboard View Image">
                <img src="({% IMG_SEAT %})" alt="Ride Seat View Image">
                <img src="({% IMG_SEAT2 %})" alt="Ride Seat View Image">
                <img src="({% IMG_TRUNK %})" alt="Ride Trunk View Image">
                <img src="({% IMG_WHEEL %})" alt="Ride Wheel View Image">
            </div>
            <div class="wide_shop_description_wrapper">
                <p>
                    <b>({% NAME %})</b>
                </p> <br /> <br /> 
                <p>
                    ({% DESCRIPTION %})
                </p>
            </div>
            <div class="rate">
                <p>({% RATE %})</p>
            </div>
            <div class="wide_shop_description_price_wrapper">
                <p>({% PRICE %})</p>
                <p id="wide_save_now" class="save-btn" data-productId="{% ID %}">
                    <i class="fa-solid fa-heart"></i>
                </p>
                <a href="/buy"><p>Buy Now</p></a>
            </div>
            <div class="pricing_info">
                <p style="text-align: center;"><b>Ride's Pricing Info:</b></p> <br /> <br />
                <p>Brand New Ride Starting Price is around <b>({% BRANDPRICE %})</b></p> <br />
                <p>Used Ride Starting Price is around <b>({% PRICE3 %})</b></p> <br />

                <p>Please note that the prices listed on our website are subject to change and may vary depending on the vehicle's condition, trim level, model year, location, and other factors. The prices listed are the starting prices for both used and brand new cars. For used cars, please be aware that they may be either Local used or Foreign used, but rest assured that they are all Grade A cars. To confirm the most accurate and current pricing, please contact our customer service team directly at +234-7081065179 || +234-7059489788 to speak with a representative.</p>
            </div>
            <div class="wide_shop_description_other_wrapper">

                ({% WIDE_OTHER %})

            </div>

            <div class="review">
                <h2>Please leave us a review about this ride</h2>

                <form action="/review?id=({% ID %})" method="post">

                    <input id="wide_review_name" type="text" name="username" placeholder="My name is ...!" required />

                    <textarea name="thoughts" id="wide_review" placeholder="Here is my review ...!" required ></textarea>

                    <input type="text" value="<%- d %>" name="date" id="date" readonly /> <br />

                    <button type="submit" id="wideReviewSubmit">Submit</button>

                </form>
            </div>
            

            <div class="review_history">
                <h3>Reviews</h3>
                
                <div class="review_icons">
                    <i class="fa-solid fa-face-sad-tear fa-beat-fade" style="color: #eb0000;"></i>
                    <i class="fa-solid fa-face-tired fa-beat-fade" style="color: #FFD43B;"></i>
                    <i class="fa-solid fa-face-rolling-eyes fa-beat-fade" style="color: #434137;"></i>
                    <i class="fa-solid fa-face-surprise fa-beat-fade" style="color: #005eff;"></i>
                    <i class="fa-solid fa-face-smile-wink fa-beat-fade" style="color: #09f005;"></i>
                </div>

                <div class="review_history_item">

                    <% for(key of jsReviewData) { %>
    
                        <p>


                            <span><b class="name"> My name is <%= key.username %>. </b></span> <br />
                            <span> <b> My thoughts, </b> <i> <%= key.thoughts %> </i> </span> <br />
                            <span><b>Date:</b> <i><%= key.date %></i> </span>
    
                        </p>
    
                    <% } %>
    
                </div>
            </div>
        </div>
    </section>
</div>

