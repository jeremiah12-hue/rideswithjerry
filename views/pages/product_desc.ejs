    <section class="wide_shop_description">
        <div class="wide_shop_description_item_wrapper">
            <div class="wide_shop_description_img_wrapper">
                <img loading="lazy" src="({% IMG_FRONT %})" alt="Ride Front View Image">
                <img loading="lazy" src="({% IMG_REAR %})" alt="Ride Rear View Image">
                <img loading="lazy" src="({% IMG_SIDE %})" alt="Ride Side View Image">
                <img loading="lazy" src="({% IMG_SIDE2 %})" alt="Ride Side View Image">
